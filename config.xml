<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id        = "de.lizzynet.app"
        versionCode="10"
        version   = "1.0.0">

    <!-- versionCode is optional and Android only -->

    <name>LizzyNet</name>

    <description>
        LizzyNet ist ein Informations-Portal mit angeschlossener Community für Mädchen und junge Frauen mit Infos und Neuigkeiten zu Themen, die dich interessieren. Mitmachen ist erwünscht - du kannst zum Beispiel selber Beiträge über neue Bücher, Musik, Filme, Spiele oder ganz ungefragt zu eigenen Themen schreiben.
    </description>

    <author href="https://www.digionline.de" email="info@digionline.de">
        DigiOnline GmbH
    </author>

    <preference name="fullscreen" value="true" />
    <preference name="ios-statusbarstyle" value="black-translucent" />

    <icon src="icon.png" width="144" height="144" />
    <icon src="touch-icon-57x57.png" gap:platform="ios" width="57" height="57" />
    <icon src="touch-icon-72x72.png" gap:platform="ios" width="72" height="72" />
    <icon src="touch-icon-114x114.png" gap:platform="ios" width="114" height="114" />
    <icon src="touch-icon-144x144.png" gap:platform="ios" width="144" height="144" />

    <gap:splash src="splash.png" />

    <feature name="http://api.phonegap.com/1.0/network"/>

    <access origin="https://www.lizzynet.de" />

</widget>
